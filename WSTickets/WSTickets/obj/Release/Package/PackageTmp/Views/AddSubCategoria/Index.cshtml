@using System.Web.UI.WebControls
@using WSTickets.ViewModels
@model WSTickets.ViewModels.SubCategoriaViewModel
@{
    ViewBag.Title = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
<body class="container">
    <div class="body-content">
        <h1 class="text-center">SUB-CATEGORIA</h1>
        @using (Html.BeginForm("InsertSubCategoria", "AddSubCategoria", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <br />
            <br />
            <br />
            <input id="idcat" type="text" name="idcat" class="form-control" placeholder="Id Categoria" />
            <br />
            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", @placeholder = "Nombre" })
            <br />
            @Html.TextBoxFor(model => model.Descripcion, new { @class = "form-control", @placeholder = "Descripcion" })
            <br />
            @Html.TextBoxFor(model => model.PrecioNormal, new { @class = "form-control", @placeholder = "Precio normal" })
            <br />
            @Html.TextBoxFor(model => model.PrecioDescuento, new { @class = "form-control", @placeholder = "Precio con descuento" })
            <br />
            @Html.TextBoxFor(model => model.CodigoDescuento, new { @class = "form-control", @placeholder = "Codigo de descuento" })
            <br />
            <input id="file" type="file" name="file" class="form-control" />
            <br />
            <input id="submit" type="submit" value="Guardar SubCategoria" class="form-control btn btn-success" />
        }

    </div>
</body>
</html>

