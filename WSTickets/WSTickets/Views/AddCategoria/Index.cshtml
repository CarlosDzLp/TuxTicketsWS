@model WSTickets.ViewModels.CategoriaViewModel
@{
    ViewBag.Title = "Index";
    Layout = null;
}
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<body class="container">
    <div class="body-content">
        <h1 class="text-center">CATEGORIA</h1>
        @using (Html.BeginForm("InsertCategoria", "AddCategoria", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <br />
            <br />
            <br />
            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", @placeholder = "Nombre" })
            <br />
            @Html.TextBoxFor(model => model.Descripcion, new { @class = "form-control", @placeholder = "Descripcion" })
            <br />
            <input id="file" type="file" name="file" class = "form-control"/>
            <br />
            <input id="submit" type="submit" value="Guardar Categoria" class = "form-control btn btn-success"/>
        }
    </div>
</body>
</html>

